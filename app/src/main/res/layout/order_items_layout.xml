<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    android:innerRadius="3dp"
    android:shape="ring"
    android:thicknessRatio="1.9"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/order_time_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSubText"
                android:textSize="13dp"
                android:text="18-2-2103"
                android:layout_marginLeft="10dp"/>
            <View
                android:id="@+id/confirm_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="5dp"
                android:background="@color/colorPrimary"
                />
            <LinearLayout
                android:id="@+id/linear_order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2.0">

                    <TextView
                        android:id="@+id/order_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tran tien dat"

                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:maxLines="2"
                        />
                    <TextView
                        android:id="@+id/order_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0372403161"

                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:textColor="@color/colorSubText"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:orientation="vertical"

                    >
                    <TextView
                        android:id="@+id/order_total_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/product_name"
                        android:text="@string/order_total_text"
                        android:layout_gravity="center"
                        android:textSize="14dp"
                        android:textStyle="normal"
                        />
                    <TextView
                        android:id="@+id/order_total_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/product_name"
                        android:text="30.000"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/order_status"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="Shipped"

                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/order_address_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Product description sad qwe asd zxc qwe sad zxc d qwe zxc d qwe a zxc as da zxc we asd zxc  qwe zxc "
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="italic"

                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>