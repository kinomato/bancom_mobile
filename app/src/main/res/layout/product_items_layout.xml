<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:src="@drawable/logo2"
            android:background="@drawable/image_shape"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_product_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="Product name is too long so its ellips"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_toRightOf="@+id/product_name"
                    android:text="30.000"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Product description sad qwe asd zxc qwe sad zxc d qwe zxc d qwe a zxc as da zxc we asd zxc  qwe zxc "
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="italic"
                android:textColor="@color/colorPrimaryDark"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>