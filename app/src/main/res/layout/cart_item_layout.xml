<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_product_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    android:innerRadius="3dp"
    android:shape="ring"
    android:thicknessRatio="1.9"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/cart_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo2"
            android:background="@drawable/imageround"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_product_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cart_product_name"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:text="Product name is too long so its ellips"
                    android:layout_weight="3.0"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <!--<TextView
                    android:id="@+id/cart_product_price"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_toRightOf="@+id/product_name"
                    android:text="30.000"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    />-->
                <Button
                    android:id="@+id/cart_delete_btn"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"

                    android:layout_toRightOf="@+id/product_name"
                    android:hint="X"

                    />
            </LinearLayout>
            <TextView
                android:id="@+id/cart_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="30.000"
                android:textAlignment="textEnd"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                />
            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/cart_product_number_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                app:textSize="5dp"
                app:initialNumber="1"
                app:finalNumber="10"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="2dp"
                >

            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            <!--<TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Product description sad qwe asd zxc qwe sad zxc d qwe zxc d qwe a zxc as da zxc we asd zxc  qwe zxc "
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="italic"
                android:textColor="@color/colorPrimaryDark"
                />-->
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>